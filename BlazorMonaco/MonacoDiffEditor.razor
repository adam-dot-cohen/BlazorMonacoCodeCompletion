    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && string.IsNullOrWhiteSpace(Id))
        {
            Id = "blazor-monaco-diff-" + Guid.NewGuid().ToString();
        }

        await base.OnAfterRenderAsync(firstRender);

        if (firstRender)
        {
            // Create the editor
            var options = ConstructionOptions?.Invoke(this);
            var diffEditorData = DiffEditorData?.Invoke(this);
            await MonacoDiffEditor.CreateDiffEditor(Id, diffEditorData, options);

            // Set editor event listeners

